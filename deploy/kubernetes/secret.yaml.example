# Secret for MCP server credentials
# Copy this file to secret.yaml and fill in real values
# NEVER commit secret.yaml to version control
apiVersion: v1
kind: Secret
metadata:
  name: ethpandaops-mcp-secrets
  namespace: ethpandaops-mcp
  labels:
    app.kubernetes.io/name: ethpandaops-mcp
    app.kubernetes.io/component: secrets
type: Opaque
stringData:
  # Base URL for the MCP server
  MCP_BASE_URL: "https://mcp.example.com"

  # ClickHouse credentials
  CLICKHOUSE_XATU_HOST: "clickhouse.example.com:8443"
  CLICKHOUSE_XATU_DATABASE: "default"
  CLICKHOUSE_XATU_USERNAME: "readonly"
  CLICKHOUSE_XATU_PASSWORD: "CHANGE_ME"

  # Prometheus credentials
  PROMETHEUS_URL: "https://prometheus.example.com"
  PROMETHEUS_USERNAME: "user"
  PROMETHEUS_PASSWORD: "CHANGE_ME"

  # Loki credentials
  LOKI_URL: "https://loki.example.com"
  LOKI_USERNAME: "user"
  LOKI_PASSWORD: "CHANGE_ME"

  # S3 Storage credentials
  S3_ENDPOINT: "https://s3.amazonaws.com"
  S3_ACCESS_KEY: "AKIAIOSFODNN7EXAMPLE"
  S3_SECRET_KEY: "CHANGE_ME"
  S3_PUBLIC_URL: "https://outputs.example.com"

  # GitHub OAuth credentials (if auth is enabled)
  # GITHUB_CLIENT_ID: "your-client-id"
  # GITHUB_CLIENT_SECRET: "CHANGE_ME"
  # JWT_SECRET_KEY: "CHANGE_ME"
