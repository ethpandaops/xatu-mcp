# Required - Grafana credentials (all datasource queries route through Grafana)
GRAFANA_URL=https://grafana.example.com
GRAFANA_SERVICE_TOKEN=your_grafana_service_token

# Optional - Server ports
MCP_SERVER_PORT=2480
MCP_METRICS_PORT=2490

# Optional - MinIO/S3 storage
MINIO_API_PORT=2400
MINIO_CONSOLE_PORT=2401
S3_ENDPOINT=http://localhost:2400
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_PUBLIC_URL=http://localhost:2400/xatu-mcp-outputs

# Optional - GitHub OAuth (if auth enabled)
# GITHUB_CLIENT_ID=your_client_id
# GITHUB_CLIENT_SECRET=your_client_secret
